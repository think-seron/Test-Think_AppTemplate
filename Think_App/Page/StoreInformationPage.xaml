<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Think_App.StoreInformationPage"
	xmlns:local="clr-namespace:Think_App"
	xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
	BackgroundColor="{x:Static local:ColorList.colorBackground}"
>
	<ListView
		x:Name="ListView"
		RowHeight="183"
		BackgroundColor="{x:Static local:ColorList.colorWhite}"
		CachingStrategy="RecycleElement"
		Header="{Binding}"
	>
		<ListView.HeaderTemplate>
			<DataTemplate>
				<StackLayout
					Orientation="Vertical"
					BackgroundColor="{x:Static local:ColorList.colorWhite}"
				>
					<StackLayout
                        HorizontalOptions="FillAndExpand"
						Orientation="Horizontal"
					>
						<ffimageloading:CachedImage
							Margin="17,24,15,0"
							WidthRequest="{Binding StoreImgWidth}"
							HeightRequest="{Binding StoreImgHeight}"
							Source="{Binding StoreImgSouce}"
							Aspect="AspectFill"
							DownsampleToViewSize="true"
						/>
						<StackLayout
                            HorizontalOptions="FillAndExpand"
							Orientation="Vertical"
						>
							<StackLayout
                                HorizontalOptions="FillAndExpand"
								Orientation="Horizontal"
								Padding="0,9,4,7"
							>                     
                                <Label
                                    Margin="0,17,0,0"
                                    FontSize="{Binding StoreNameFontSize}"
                                    TextColor="{x:Static local:ColorList.colorFont}"
                                    Text="{Binding StoreNameTxt}"
                                    HorizontalOptions="StartAndExpand"
                                />
								<Image
									x:Name="Favorite"
									Source="{Binding FavoIconSouce, Mode=TwoWay}"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="Start"
								>
									<Image.GestureRecognizers>
								        <TapGestureRecognizer Tapped="OnStoreFavoIconClicked"/>
								    </Image.GestureRecognizers>
								</Image>
							</StackLayout>                     
                            <Label
                                HorizontalOptions="StartAndExpand"
                                FontSize="{Binding StoreNameFontSize}"
                                Text="{Binding StoreBusinessHour}"
                                TextColor="{x:Static local:ColorList.colorFont}"
                                Margin="0,0,0,18"
                            />
                            <Label
                                HorizontalOptions="StartAndExpand"
                                FontSize="{Binding StoreAddrFontSize}"
                                Text="{Binding StoreAddress}"
                                TextColor="{x:Static local:ColorList.colorFont}"
                                Margin="0,0,0,6"
                            />
                            <Label
                                HorizontalOptions="StartAndExpand"
                                FontSize="{Binding StoreAddrFontSize}"
                                Text="{Binding StoreTelNumber}"
                                TextColor="{x:Static local:ColorList.colorFont}"
                            />
						</StackLayout>
					</StackLayout>
					<StackLayout
						Padding="18,17,18,16"
						Orientation="Horizontal"
					>
						<AbsoluteLayout
                            HorizontalOptions="CenterAndExpand"
							WidthRequest="{Binding TelBtnWidth}"
							HeightRequest="{Binding TelBtnHeight}"
						>
							<Image
								AbsoluteLayout.LayoutBounds="0,0,1,1"
								AbsoluteLayout.LayoutFlags="All"
								Source="MidiumWhiteButtonShadow.png"
								Aspect="AspectFit"
							/>
                            <Button
                                Clicked="TelBtnClicked"
								AbsoluteLayout.LayoutBounds="0,0,1,1"
								AbsoluteLayout.LayoutFlags="All"
							    ImageSource="tel.png"
							    Text="サロンに電話する"
							    TextColor="{x:Static local:ColorList.colorFont}"
							    FontSize="12"
							    WidthRequest="106"
							    HeightRequest="28"
							    BorderRadius="6"
                                BackgroundColor="White"
                                ContentLayout="Left,10"
                                Padding="10,0"
                                Margin="4,2,4,6"
						    />
							<!--<local:CustomButton
								Clicked="TelBtnClicked"
								AbsoluteLayout.LayoutBounds="0,0,1,1"
								AbsoluteLayout.LayoutFlags="All"
								Style="{StaticResource WhiteButton}"
								Text="サロンに電話する"
								Source="tel.png"
								ImageLayoutPosition="Left"
								ImageWidth="{Binding BtnImgSize}"
								ImageHeight="{Binding BtnImgSize}"
							/>-->
						</AbsoluteLayout>
						<AbsoluteLayout
                            HorizontalOptions="CenterAndExpand"
							WidthRequest="{Binding TelBtnWidth}"
							HeightRequest="{Binding TelBtnHeight}"
						>
							<Image
								AbsoluteLayout.LayoutBounds="0,0,1,1"
								AbsoluteLayout.LayoutFlags="All"
								Source="MidiumWhiteButtonShadow.png"
								Aspect="AspectFit"
							/>
                            <Button
                                Clicked="MapBtnClicked"
								AbsoluteLayout.LayoutBounds="0,0,1,1"
								AbsoluteLayout.LayoutFlags="All"
							    ImageSource="map.png"
							    Text="MAPを見る"
							    TextColor="{x:Static local:ColorList.colorFont}"
							    FontSize="12"
							    WidthRequest="106"
							    HeightRequest="28"
							    BorderRadius="6"
                                BackgroundColor="White"
                                ContentLayout="Left,4"
                                Padding="16,0"
                                Margin="4,2,4,6"
						    />
							<!--<local:CustomButton
								Clicked="MapBtnClicked"
								AbsoluteLayout.LayoutBounds="0,0,1,1"
								AbsoluteLayout.LayoutFlags="All"
								Style="{StaticResource WhiteButton}"
								Text="MAPを見る"
								Source="map.png"
								ImageLayoutPosition="Left"
								ImageWidth="{Binding BtnImgSize}"
								ImageHeight="{Binding BtnImgSize}"
							/>-->
						</AbsoluteLayout>
					</StackLayout>
					<Label
						Margin="17,0,17,25"
						Text="{Binding StoreMessage}"
						FontSize="{Binding StoreAddrFontSize}"
						TextColor="{x:Static local:ColorList.colorFont}"
					/>
					<StackLayout
						BackgroundColor="{x:Static local:ColorList.colorBackground}"
						HeightRequest="30"
						WidthRequest="{Binding BoxViewWidth}"
						Orientation="Vertical"
					>
						<BoxView
							WidthRequest="{Binding BoxViewWidth}"
							HeightRequest="1"
							Color="{x:Static local:ColorList.colorCellBoader}"
						/>
						<Label
							Margin="16,4,0,0"
							Text="スタッフ一覧"
							FontSize="11"
							TextColor="{x:Static local:ColorList.colorFont}"
							HeightRequest="28"
						/>
						<BoxView
							WidthRequest="{Binding BoxViewWidth}"
							HeightRequest="1"
							Color="{x:Static local:ColorList.colorCellBoader}"
						/>
					</StackLayout>
				</StackLayout>
			</DataTemplate>
		</ListView.HeaderTemplate>
		<ListView.ItemTemplate>
			<DataTemplate>
				<local:ListViewStaffStore
					x:Name="ListViewStaffStore"
				/>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
