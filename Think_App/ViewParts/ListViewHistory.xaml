<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Think_App.ListViewHistory"
	xmlns:local="clr-namespace:Think_App"
>
	<StackLayout
		Spacing="0"
		Padding="0"
		Margin="0"
		BackgroundColor="{x:Static local:ColorList.colorWhite}"
		HeightRequest="{Binding HeightSize}"
		WidthRequest="{Binding WidthSize}"
		Orientation="Horizontal"
	>
		<Image
			Margin="21,14,14,21"
			WidthRequest="{Binding ImgSize}"
			HeightRequest="{Binding ImgSize}"
			Source="{Binding Source}"
		/>
		<StackLayout
			Orientation="Vertical"
			Spacing="0"
			Padding="0"
			Margin="0"
		>
			<Label
				Margin="0,16,0,7"
				Text="{Binding StoreName}"
				FontSize="{Binding StoreNameSize}"
				TextColor="{x:Static local:ColorList.colorFont}"
			/>
			<Label
				Text="{Binding Time}"
				FontSize="{Binding StoreNameSize}"
				TextColor="{x:Static local:ColorList.colorFont}"
			/>
		</StackLayout>
	</StackLayout>
</ContentView>
