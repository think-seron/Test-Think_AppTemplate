<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Think_App.ScheduleDayView"
	xmlns:local="clr-namespace:Think_App"

	>
	<StackLayout
		HorizontalOptions="Center"
		VerticalOptions="Center"
		Spacing="5"
		Padding="0"
		WidthRequest="{Binding DayWidth, Mode=TwoWay}"
		>
		<Label
			Text="{Binding DayText, Mode=TwoWay}"
			TextColor="{Binding DayTextColor, Mode=TwoWay}"
			FontSize="{Binding DayFontSize, Mode=TwoWay}"
			HorizontalOptions="CenterAndExpand"
			VerticalOptions="Start"
			HorizontalTextAlignment="Center"
			VerticalTextAlignment="Center"
			/>
		<Label
			Text="{Binding DayOfWeekText, Mode=TwoWay}"
			TextColor="{Binding DayTextColor, Mode=TwoWay}"
			FontSize="{Binding DayFontSize, Mode=TwoWay}"
			HorizontalOptions="CenterAndExpand"
			VerticalOptions="Start"
			HorizontalTextAlignment="Center"
			VerticalTextAlignment="Center"
			/>
	</StackLayout>
</ContentView>
